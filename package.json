{
  "name": "llmcheckpoint",
  "displayName": "LLMCheckpoint",
  "description": "Provide checkpoint context to LLM coding assistants",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "LLM Checkpoint",
      "properties": {
        "llmcheckpoint.showInfoMessages": {
          "type": "boolean",
          "default": true,
          "description": "Show information messages for operations like saving, exporting, and deleting versions"
        },
        "llmcheckpoint.autoCleanupAfterCommit": {
          "type": "boolean",
          "default": false,
          "description": "Automatically cleanup versions after git commit, keeping only the latest version renamed with the commit message"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llm-checkpoint",
          "title": "LLM Checkpoint",
          "icon": "$(history)"
        }
      ]
    },
    "views": {
      "llm-checkpoint": [
        {
          "id": "llmcheckpointVersions",
          "name": "Versions"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "llmcheckpoint.openSettings",
          "when": "view == llmcheckpointVersions",
          "group": "navigation@1"
        },
        {
          "command": "llmcheckpoint.quickClean",
          "when": "view == llmcheckpointVersions",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "llmcheckpoint.deleteVersion",
          "when": "view == llmcheckpointVersions && viewItem == version",
          "group": "inline"
        },
        {
          "command": "llmcheckpoint.exportVersion",
          "when": "view == llmcheckpointVersions && viewItem == version",
          "group": "inline"
        },
        {
          "command": "llmcheckpoint.appendVersion",
          "when": "view == llmcheckpointVersions && viewItem == version",
          "group": "inline"
        },
        {
          "command": "llmcheckpoint.quickClean",
          "when": "view == llmcheckpointVersions",
          "group": "navigation@2"
        },
        {
          "command": "llmcheckpoint.clearAll",
          "when": "view == llmcheckpointVersions",
          "group": "navigation@2"
        }
      ],
      "editor/title": [
        {
          "command": "llmcheckpoint.saveVersion",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "llmcheckpoint.saveVersion",
        "title": "Save Version",
        "icon": "$(add)"
      },
      {
        "command": "llmcheckpoint.viewVersion",
        "title": "View Version",
        "icon": "$(eye)"
      },
      {
        "command": "llmcheckpoint.exportVersion",
        "title": "Reset Context",
        "icon": "$(export)"
      },
      {
        "command": "llmcheckpoint.deleteVersion",
        "title": "Delete Version",
        "icon": "$(trash)"
      },
      {
        "command": "llmcheckpoint.openSettings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "llmcheckpoint.appendVersion",
        "title": "Append Version",
        "icon": "$(add)"
      },
      {
        "command": "llmcheckpoint.quickClean",
        "title": "Quick Clean",
        "icon": "$(clear-all)"
      },
      {
        "command": "llmcheckpoint.clearAll",
        "title": "Clear All Versions",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "llmcheckpoint.saveVersion",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "llmcheckpoint.showVersionHistory",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/diff": "^7.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@types/sql.js": "^1.4.9",
    "diff": "^7.0.0",
    "sql.js": "^1.12.0"
  }
}
